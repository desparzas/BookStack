@page "/shelves"
@using BookStack.Web.Data
@using BookStack.Web.Models
@using Microsoft.EntityFrameworkCore
@inject BookStackContext DbContext
@rendermode InteractiveServer

<PageTitle>Shelves - BookStack</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Shelves</h1>
        <button class="btn btn-primary" @onclick="ShowAddShelfDialog">
            Create New Shelf
        </button>
    </div>

    @if (shelves == null)
    {
        <p><em>Loading shelves...</em></p>
    }
    else
    {
        <div class="row">
            @foreach (var shelf in shelves)
            {
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                @shelf.Name
                                @if (shelf.IsDefault)
                                {
                                    <span class="badge bg-secondary ms-2">Default</span>
                                }
                            </h5>
                            <span class="badge bg-primary">@shelf.ShelfBooks.Count books</span>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(shelf.Description))
                            {
                                <p class="card-text">@shelf.Description</p>
                            }

                            @if (shelf.ShelfBooks.Any())
                            {
                                <div class="mt-3">
                                    <h6>Books on this shelf:</h6>
                                    <ul class="list-group list-group-flush">
                                        @foreach (var shelfBook in shelf.ShelfBooks.Take(5))
                                        {
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <div>
                                                    <strong>@shelfBook.Book.Title</strong>
                                                    @if (shelfBook.Book.BookAuthors.Any())
                                                    {
                                                        <br />
                                                        <small class="text-muted">by @string.Join(", ", shelfBook.Book.BookAuthors.Select(ba => ba.Author.Name))</small>
                                                    }
                                                </div>
                                                <span class="badge @GetStatusBadgeClass(shelfBook.ReadingStatus)">
                                                    @shelfBook.ReadingStatus.ToString()
                                                </span>
                                            </li>
                                        }
                                    </ul>
                                    @if (shelf.ShelfBooks.Count > 5)
                                    {
                                        <p class="text-muted mt-2">And @(shelf.ShelfBooks.Count - 5) more...</p>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">This shelf is empty. Add some books!</p>
                            }
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-sm btn-outline-primary" @onclick="() => ViewShelf(shelf.Id)">
                                View All Books
                            </button>
                            @if (!shelf.IsDefault)
                            {
                                <button class="btn btn-sm btn-outline-danger ms-2" @onclick="() => DeleteShelf(shelf.Id)">
                                    Delete Shelf
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<Shelf>? shelves;

    protected override async Task OnInitializedAsync()
    {
        await LoadShelves();
    }

    private async Task LoadShelves()
    {
        shelves = await DbContext.Shelves
            .Include(s => s.ShelfBooks)
                .ThenInclude(sb => sb.Book)
                    .ThenInclude(b => b.BookAuthors)
                        .ThenInclude(ba => ba.Author)
            .OrderByDescending(s => s.IsDefault)
            .ThenBy(s => s.Name)
            .ToListAsync();
    }

    private string GetStatusBadgeClass(ReadingStatus status)
    {
        return status switch
        {
            ReadingStatus.NotStarted => "bg-secondary",
            ReadingStatus.InProgress => "bg-warning",
            ReadingStatus.Completed => "bg-success",
            _ => "bg-light"
        };
    }

    private void ShowAddShelfDialog()
    {
        // TODO: Implement add shelf dialog
    }

    private void ViewShelf(int shelfId)
    {
        // TODO: Navigate to shelf details page
    }

    private async Task DeleteShelf(int shelfId)
    {
        var shelf = await DbContext.Shelves.FindAsync(shelfId);
        if (shelf != null && !shelf.IsDefault)
        {
            DbContext.Shelves.Remove(shelf);
            await DbContext.SaveChangesAsync();
            await LoadShelves();
        }
    }
}
