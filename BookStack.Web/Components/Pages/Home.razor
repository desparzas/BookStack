@page "/"

<PageTitle>BookStack - Home</PageTitle>

<div class="container mt-4">
    <div class="text-center">
        <h1 class="display-4">Welcome to BookStack</h1>
        <p class="lead">Your personal library management system</p>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h3>📚 Manage Books</h3>
                    <p class="card-text">Organize your book collection with ease. Add, edit, and track your books.</p>
                    <a href="/books" class="btn btn-primary">View Books</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h3>📖 Track Reading</h3>
                    <p class="card-text">Keep track of what you're reading, want to read, and have finished.</p>
                    <a href="/shelves" class="btn btn-primary">View Shelves</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h3>⭐ Write Reviews</h3>
                    <p class="card-text">Rate and review your books. Remember your thoughts and favorite quotes.</p>
                    <a href="/books" class="btn btn-primary">Browse Collection</a>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <h2>Quick Stats</h2>
        <div class="row">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <h4 class="card-title">Total Books</h4>
                        <p class="display-6">10</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <h4 class="card-title">Currently Reading</h4>
                        <p class="display-6">1</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <h4 class="card-title">Want to Read</h4>
                        <p class="display-6">1</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <h4 class="card-title">Finished</h4>
                        <p class="display-6">2</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
